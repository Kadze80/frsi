<script>
<![CDATA[
function updateCalculatedFields() {
var groupId, v = [], sum;

// Column 4

sum = 0;
for (var i = 1; i < 6; i++) {
	groupId = "fs_rv_apk_kp_array*sum:num:" + i;
	v[i] = sumInputValuesByGroup(groupId);
	setInputValue(groupId, v[i]);
	sum += v[i];
}
setInputValue("fs_rv_apk_kp_array*sum:num:Itogo", sum);

// Column 5

sum = 0;
for (var i = 1; i < 6; i++) {
	groupId = "fs_rv_apk_kp_array*prov_sum:num:" + i;
	v[i] = sumInputValuesByGroup(groupId);
	setInputValue(groupId, v[i]);
	sum += v[i];
}
setInputValue("fs_rv_apk_kp_array*prov_sum:num:Itogo", sum);
}
]]>
</script>
<script2>
<![CDATA[
var fixed;
function fixTable(fix,type){
	if((type==1 && fixed) || (type == 0)) {
    	$("#fs_rv_apk_kp_array").tableHeadFixer({unFix:!fix, head:true});
        fixed = fix;
    }
}
]]>
</script2>

</Form>